<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.northw.blog.common.dao.account.AccountDao">
    <resultMap id="AccountMap" type="Account">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="roleId" column="role_id" jdbcType="BIGINT"/>
        <result property="wechatId" column="wechat_id" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="gmtCreate" column="gmt_create" jdbcType="TIMESTAMP"/>
        <result property="gmtModified" column="gmt_modified" jdbcType="TIMESTAMP"/>
        <result property="status" column="status"/>
    </resultMap>

    <sql id="fullColumns">
        id,
        name,
        password,
        phone,
        role_id,
        wechat_id,
        email,
        gmt_create,
        gmt_modified,
        last_login_time,
        status
    </sql>

    <insert id="insertNewAccount" parameterType="Account" useGeneratedKeys="true" keyProperty="id">
      INSERT INTO account (
        name,
        password,
        phone,
        role_id,
        wechat_id,
        email,
        gmt_create,
        gmt_modified,
        last_login_time,
        status
      )
      VALUES (#{name},#{password},#{phone},#{roleId},#{wechatId},#{email},#{gmtCreate},#{gmtModified},#{lastLoginTime},#{status});
    </insert>

    <!--获得信息-->
    <select id="getAccountByLoginname" parameterType="string" resultMap="AccountMap">
      SELECT
      <include refid="fullColumns"/>
      FROM account
      WHERE name=#{name}
    </select>

    <select id="getAccountByAccountId" parameterType="int" resultMap="AccountMap">
        SELECT
        <include refid="fullColumns"/>
        FROM account
        WHERE id = #{id}
    </select>

    <select id="getAccountByWeChatId" parameterType="string" resultMap="AccountMap">
        SELECT
        <include refid="fullColumns"/>
        FROM account
        WHERE wechat_id = #{openId};
    </select>


    <!--更新信息-->
    <update id="updatePassword">
      UPDATE account
      SET password = #{newpass}
      WHERE id = #{id};
    </update>

    <update id="updateLoginTime" parameterType="Account">
      UPDATE account
      SET last_login_time = #{lastLoginTime}
      WHERE id = #{id}
    </update>

    <delete id="deleteExistAccount" parameterType="string">
        DELETE FROM account
        WHERE name = #{name}
    </delete>
</mapper>