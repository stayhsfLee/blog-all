<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thenorthw.blog.common.dao.group.ArticleGroupDao">

    <resultMap id="TagMap" type="Tag">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="creator" property="creator" jdbcType="BIGINT"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP"/>
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="fullColumns">
        id,
        name,
        description,
        creator,
        gmt_create,
        gmt_modified
    </sql>


    <select id="getAllTags"  resultMap="TagMap" >
        SELECT
        id,
        name,
        description
        FROM tag
    </select>

    <insert id="addTag" parameterType="Tag" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO article_group(
        id,
        name,
        description,
        creator,
        gmt_create,
        gmt_modified
        )
        VALUES(#{id},#{name},#{description},#{creator},#{gmtCreate},#{gmtModified})
    </insert>


    <delete id="deleteTag" parameterType="Long">
        DELETE FROM tag
        WHERE id = #{id}
    </delete>
</mapper>